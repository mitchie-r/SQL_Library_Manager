extends layout.pug

block content
  h1= book.title

  form(action=`/books/${book.id}` method="POST")
    if errors
      h2.errors Error!
      ul.errors
        each error in errors
          li= error.message

    include form 

    p 
      input(type="submit" value="Update Book")
      a#cancel-btn.button(href="/") Cancel

  form(action=`/books/${book.id}/delete` method='POST')
    input.delete(type="submit" value="Delete Book")